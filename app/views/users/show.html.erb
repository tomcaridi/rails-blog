<body class="bg-other">
<div class="feed-wrapper">
  <h3>
    <strong><%= @user.username %>'s</strong> latest blabs:
  </h3>

    <% @posts.reverse_each do |post| %>
    <div class="post-wrapper">
      <div class="post"><%= post.body %></div>
      <% if session[:user_id] == post.user_id %>
        <div class="edit_delete">
          <%= link_to 'Edit Post', edit_post_path(post.id) %><br>
          <%= link_to 'Delete Post', post_path(post.id), method: :delete, data: {confirm: 'Are you sure?'} %>
        </div>
      <% end %>

        <div class="comments-form">
          <h5>Leave a comment:</h5>
          <%= form_for [post, Comment.new] do |f| %>
            <%= f.text_area :body, :id => "comment_bx" %>
            <%= f.submit :class => "comment_btn"%>
          <% end %>
        </div>

        <div class="comments-list">
          <% post.comments.each do |comment| %>
          <h5><%= comment.user.username %>:</h5>
          <p><%= comment.body %></p>
          <% end %>
        </div>
    </div>
    <% end %>
  <% if session[:user_id] == @user %>
    <%= link_to 'Edit Profile', edit_user_path(user) %>
  <% end %> 

</div>
</body>

