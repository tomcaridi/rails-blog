<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |error| %>
      <p><%= error %></p>
      <% end %>
  <% end %>
  <div>
	  <%=f.label :username %>
	  <%=f.text_field :username %>
  </div>
  <div>
    <%=f.label :password %>
    <%=f.password_field :password %>
  </div>
  <div>
  	<%=f.submit%>
  </div>

<% end %>