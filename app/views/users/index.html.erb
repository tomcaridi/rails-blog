<body class="bg-other">
<%= form_tag("/search", method: "get") do %>
  <%= label_tag(:query, "Search:") %>
  <%= text_field_tag(:query) %>
  <%= submit_tag("Submit") %>
<% end %>
<div class="user-bx"> 
	<% @users.each do |user| %>
	  <h3><%=link_to user.username, user_path(user.id)%></h3>
	<% end %>
</div>
</body>