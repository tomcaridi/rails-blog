<!DOCTYPE html>
<html>
<head>
  <title>blabber</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav id="nav">
  <div class="logo"><a href="/">blabber</a></div>
  <ul>
    <li><%= link_to "Community", users_path %></li>
    <% unless session[:user_id] %>
	  <li><%= link_to "Log In", sign_in_path %></li>
	  <li><%= link_to "Sign Up", sign_up_path %></li>
    <% end %>
    <% if session[:user_id] %>
    <li><%= link_to "My Feed", user_path(session[:user_id]) %></li>
    <li><%= link_to "New Post", new_post_path %></li>
    <li><%= link_to 'Edit Profile', edit_user_path(session[:user_id]) %></li>
    <li><%= link_to "Sign Out", users_sign_out_path %></li>
    <% end %> 
  </ul>
</nav>

  <% if flash[:notice] %>
    <div class="notice"><%=flash[:notice] %></div>
  <% end %>

  <% if flash[:alert] %>
    <div class="alert"><%=flash[:alert] %></div>
  <% end %>

<%= yield %>
</body>
</html>
